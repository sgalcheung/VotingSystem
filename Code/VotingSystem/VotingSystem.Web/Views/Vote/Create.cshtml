@model CreateVoteCommand

@{
    ViewBag.Title = "Create Vote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <partial name="_EditVotePartial" />
            
            @for (int i = 0; i < Model.VoteItems.Count; i++)
            {
                <div class="form-group">
                    <label asp-for="VoteItems[i].ItemName" class="control-label"></label>
                    <input asp-for="VoteItems[i].ItemName" class="form-control" />
                    <span asp-validation-for="VoteItems[i].ItemName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VoteItems[i].IsMultiple" class="control-label"></label>
                    <input asp-for="VoteItems[i].IsMultiple" class="form-control" />
                    <span asp-validation-for="VoteItems[i].IsMultiple" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            }
            
            <div class="form-group">
                <button type="button" class="btn btn-success">Add Item</button>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}